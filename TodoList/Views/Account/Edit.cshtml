@model AccountEditVm

@{
    ViewData["Title"] = "Chỉnh sửa " + @Html.ViewData.Model.ApplicationUser.Staff.FullName;
}

<h6>
    <a asp-action="Index">
        Trở về Tài khoản
    </a>
</h6>

<form asp-action="Edit" class="mt-3">
    @Html.HiddenFor(m => m.StaffId)

    <div class="form-group">
        @Html.DisplayNameFor(m => m.StaffId)@Html.Raw(":&nbsp")
        <strong>
            @Html.DisplayFor(m => m.ApplicationUser.Staff.FullName)
            @Html.Raw("(")
            @Html.DisplayFor(m => m.ApplicationUser.UserName)
            @Html.Raw(")")
        </strong>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RoleId, new {@class = "control-label"})
        @Html.DropDownListFor(
            m => m.RoleId,
            Html.GetEnumSelectList(typeof(Level)),
            new {@class = "form-control"}
            )
        @Html.ValidationMessageFor(m => m.RoleId, null, new {@class = "text-danger"})
    </div>

    <input type="submit" value="Lưu" class="btn btn-primary col-1"/>
</form>