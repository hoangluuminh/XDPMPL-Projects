@model TodoList.ViewModels.AccountRegisterVm

@{
    ViewBag.Title = "Register";
}

<h6>
    <a asp-controller="Account" asp-action="Index">
        Trở về Quản lý Tài khoản
    </a>
</h6>

<h2>Tài khoản mới</h2>

<form asp-action="Register">
    @Html.ValidationSummary(true, null, new {@class = "alert alert-danger", role = "alert"})

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Username, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class = "control-label"})
        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Password, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password2, new {@class = "control-label"})
        @Html.PasswordFor(m => m.Password2, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Password2, null, new {@class = "text-danger"})
    </div>

    <hr/>

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(m => m.Staff.LastName, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Staff.LastName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Staff.LastName, null, new {@class = "text-danger"})
        </div>
        <div class="form-group col">
            @Html.LabelFor(m => m.Staff.FirstName, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Staff.FirstName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Staff.FirstName, null, new {@class = "text-danger"})
        </div>
    </div>

    <input type="submit" value="Gửi" class="btn btn-primary col-1"/>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}