@model TodoList.ViewModels.AccountLoginVm

@{
    ViewBag.Title = "Login";
    Layout = "_LayoutEmpty";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-center">TodoList Inc.</h5>
                <hr>
                <form asp-action="Login">
                    @Html.ValidationSummary(true, null, new {@class = "alert alert-danger", role="alert"})
                    <div class="form-group">
                        <input
                            asp-for="Username"
                            class="form-control"
                            placeholder="@Html.DisplayNameFor(model => model.Username)"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input
                            asp-for="Password"
                            type="password"
                            class="form-control"
                            placeholder="@Html.DisplayNameFor(model => model.Password)"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
