@model TodoTaskComponentVm

<li class="tasklist-item mt-2 card card__padding">
    <div class="d-flex">
        <div class="d-inline-flex flex-grow-1">
            <a asp-action="View" asp-route-id="@Model.TodoTask.Id" class="tasklist-item--name">
                @Html.DisplayFor(model => model.TodoTask.Name)
            </a>
            @Html.DisplayFor(model => model.TodoTask.Access, "TodoTask_TaskAccess")
        </div>
        <div class="d-flex flex-xl-row-reverse flex-lg-row" style="min-width: 25%">
            <span class="tasklist-item--enddate">
                @Html.DisplayFor(model => model.TodoTask.EndDate)
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <small>
                <span data-toggle="tooltip" title="@Html.DisplayNameFor(model => model.TodoTask.StaffId)">
                    <i class="fa fa-user"></i>
                </span>
                @Html.DisplayFor(model => model.TodoTask.Staff.FullName)
            </small>
            @if (Model.TodoTask.CreatedById != Model.TodoTask.StaffId)
            {
                <small class="ml-2">
                    <span data-toggle="tooltip" title="@Html.DisplayNameFor(model => model.TodoTask.CreatedById)">
                        <i class="fa fa-user-edit"></i>
                    </span>
                    @Html.DisplayFor(model => model.TodoTask.CreatedBy.FullName)
                </small>
            }
        </div>
    </div>
    <div class="d-flex">
        <div class="tasklist-item--partners flex-grow-1">
            @Html.DisplayFor(model => model.TodoTask.TodoTaskPartners, "TodoTask_TodoTaskPartners")
        </div>
        @if (Model.EditableTodoTaskIds.Contains(Model.TodoTask.Id))
        {
            <div class="tasklist-item--edit flex-column-reverse d-inline-flex">
                <a asp-action="Edit" asp-route-id="@Model.TodoTask.Id">
                    Chỉnh sửa
                </a>
            </div>
        }
    </div>
</li>