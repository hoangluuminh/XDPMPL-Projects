@model ActivityLogIndexVm
@{
    ViewData["Title"] = "Nhật ký";
}

<h6>
    <a asp-controller="Home" asp-action="Index">
        Trở về Trang chủ
    </a>
</h6>

<h2>Nhật ký hoạt động</h2>

<table class="table table-hover mt-3">
    <thead>
    <tr>
        @{
            var emptyLog = new ActivityLog();
        }
        <th>@Html.DisplayNameFor(m => emptyLog.TodoTask.Name)</th>
        <th>@Html.DisplayNameFor(m => emptyLog.Staff.FullName)</th>
        <th>@Html.DisplayNameFor(m => emptyLog.Content)</th>
        <th>@Html.DisplayNameFor(m => emptyLog.CreatedAt)</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ActivityLogs)
    {
        <tr>
            <td>@Html.DisplayFor(m => emptyLog.TodoTask.Name)</td>
            <td>@Html.DisplayFor(m => emptyLog.Staff.FullName)</td>
            <td>@Html.DisplayFor(m => emptyLog.Content)</td>
            <td>@Html.DisplayFor(m => emptyLog.CreatedAt)</td>
        </tr>
    }
    </tbody>
</table>