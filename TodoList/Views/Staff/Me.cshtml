@using applicationRole = TodoList.Models.ApplicationRole
@model ApplicationUser

<h6>
    <a asp-controller="Home" asp-action="Index">
        Trở về Trang chủ
    </a>
</h6>

<h2>Thông tin Nhân viên</h2>

<form asp-action="Update">
    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger", role = "alert" })
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.UserName, new { @readonly = "readonly", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
    </div>

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(m => m.Staff.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Staff.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Staff.LastName, null, new { @class = "text-danger" })
        </div>
        <div class="form-group col">
            @Html.LabelFor(m => m.Staff.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Staff.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Staff.FirstName, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new {@class = "control-label" })
        @Html.TextBoxFor(m => m.Email, new { @readonly = "readonly", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Staff.Level, new { @class = "control-label" })
        <br />
        @if (Model.Staff.Level.ToString().Equals("Leader"))
        {
            <select class="form-control" asp-for=@Model.Staff.Level>
                @foreach (var item in applicationRole.Roles)
                {
                    <option value="@item">@item </option>
                }
            </select>
        }
        else
        {
            @Html.TextBoxFor(m => m.Staff.Level, new { @readonly = "readonly", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Staff.Level, null, new { @class = "text-danger" })
        }

    </div>

    <input type="submit" value="Lưu" class="btn btn-primary col-1" />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}



