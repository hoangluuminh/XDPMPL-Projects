@model AccountRegisterVm

@{
    ViewBag.Title = "Register";
}

<h2>Tạo tài khoản</h2>

<form asp-action="Register">
    @Html.ValidationSummary(true, null, new {@class = "alert alert-danger", role = "alert"})

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Username, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class = "control-label"})
        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Password, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password2, new {@class = "control-label"})
        @Html.PasswordFor(m => m.Password2, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Password2, null, new {@class = "text-danger"})
    </div>

    <hr/>

    <div class="form-row">
        <div class="form-group col">
            @Html.LabelFor(m => m.Customer.LastName, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Customer.LastName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Customer.LastName, null, new {@class = "text-danger"})
        </div>
        <div class="form-group col">
            @Html.LabelFor(m => m.Customer.FirstName, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Customer.FirstName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Customer.FirstName, null, new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Customer.Email, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Customer.Email, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.PhoneNumber, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Customer.PhoneNumber, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Customer.PhoneNumber, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DOB, new {@class = "control-label"})
        @Html.EditorFor(m => m.Customer.DOB, new {htmlAttributes = new {@class = "form-control", type = "date"}})
        @Html.ValidationMessageFor(m => m.Customer.DOB, null, new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Address, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Customer.Address, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Customer.Address, null, new {@class = "text-danger"})
    </div>

    <input type="submit" value="Gửi" class="btn btn-primary col-1"/>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}